   <text>
      <xi:include href="eltec-body.xml"/>
      
      <back>
         <div>
            <head>Full formal specifications</head>
            <p>The ELTeC encoding scheme defined by this document is a TEI-conformant customization,
               from which user documentation, and formal RELAXNG or DTD specifications can be
               generated automatically. 
            </p>
                     
    <p> This section contains the full schema specification from
    which other level-specific versions are subsequently derived.
    It must be converted using teitoodd to produce the compiled ODD
    eltec-compiled.xml which is used as a basis for the others. </p>
            
    <schemaSpec ident="ELTeC" start="TEI">
        <moduleRef key="tei"/>
        <moduleRef key="core"
            include="author bibl choice corr orig date emph foreign gap head item l label lg list measure
            name note p pb publisher pubPlace quote ref relatedItem resp respStmt sp stage hi term title"/>
        <moduleRef key="textstructure" include="TEI text div body front back"/>
        <moduleRef key="header"
            include="catDesc category catRef change classCode  encodingDesc extent fileDesc idno  keywords langUsage language  
            profileDesc publicationStmt revisionDesc sourceDesc taxonomy teiHeader textClass titleStmt"/>
        <moduleRef key="namesdates"
            include="affiliation forename  persName  surname"/>
        <!--Class modifications to reduce attribute clutter -->
        <!-- first remove classes which provide attributes we dont want -->
        <classSpec ident="att.declaring" type="atts" mode="delete"/>
        <classSpec ident="att.declarable" type="atts" mode="delete"/>
        <classSpec ident="att.personal" type="atts" mode="delete"/>
        <classSpec ident="att.ranging" type="atts" mode="delete"/>
        <classSpec ident="att.written" type="atts" mode="delete"/>
        <classSpec ident="att.breaking" type="atts" mode="delete"/>
        <classSpec ident="att.datable.iso" type="atts" mode="delete"/>
        <classSpec ident="att.datable.custom" type="atts" mode="delete"/>
        <classSpec ident="att.divLike" type="atts" mode="delete"/>
        <classSpec ident="att.editLike" type="atts" mode="delete"/>
        <classSpec ident="att.global.responsibility" type="atts"  mode="delete"/>
        <classSpec ident="att.measurement" type="atts" mode="delete"/>
        <classSpec ident="att.naming" type="atts" mode="delete"/>
        <!-- next modify classes which provide some attributes we want and some we don't -->
        <classSpec type="atts" ident="att.global.rendition" mode="change">
            <attList>
                <attDef ident="rendition" mode="delete"/>
                <attDef ident="style" mode="delete"/>
            </attList>
        </classSpec>
        <classSpec type="atts" ident="att.typed" mode="change">
            <attList>
                <attDef ident="subtype" mode="delete"/>
            </attList>
        </classSpec>
        <classSpec type="atts" ident="att.dimensions" mode="change">
            <attList>
                <attDef ident="precision" mode="delete"/>
                <attDef ident="scope" mode="delete"/>
            </attList>
        </classSpec>
        <classSpec type="atts" ident="att.datable" mode="change">
            <attList>
                <attDef ident="calendar" mode="delete"/>
                <attDef ident="period" mode="delete"/>
            </attList>
        </classSpec>
        <classSpec type="atts" ident="att.pointing" mode="change">
            <attList>
                <attDef ident="targetLang" mode="delete"/>
                <attDef ident="evaluate" mode="delete"/>
            </attList>
        </classSpec>
        
        <!-- now tweaks for individual elements -->
        
        <!-- make xml:id and xml:lang obligatory for text -->
        <elementSpec ident="text" mode="change">
            <attList>
                <attDef ident="xml:id" mode="change" usage="req"/>
                <attDef ident="xml:lang" mode="change" usage="req"/>
            </attList>
        </elementSpec>
        
        <!-- restrict content for author -->
        <elementSpec ident="author" mode="change">
          <content>
              <alternate maxOccurs="unbounded" minOccurs="0">
                  <textNode/>
                  <elementRef key="persName"/>
                  <elementRef key="orgName"/>                  
                  <elementRef key="date"/>
                  <elementRef key="idno"/>
              </alternate>
          </content>
        </elementSpec>
     
     
          <!-- remove bibl title measure and idno from classes which allow them outside header -->
        
        <elementSpec ident="title" mode="change">
            <classes mode="replace">
                <memberOf key="model.biblPart"/>
            </classes>
        </elementSpec>
        
        <elementSpec ident="idno" mode="change">
            <classes mode="replace">
       <memberOf key="att.typed"/>
                <memberOf key="model.biblPart"/>
                <memberOf key="model.publicationStmtPart.detail"/>
            </classes>
        </elementSpec>
        
        <elementSpec ident="measure" mode="change">
          <classes mode="replace">  <memberOf key="att.measurement"/></classes>
        </elementSpec>
       
        <!-- constrain extent -->
        <elementSpec ident="extent" mode="change">
              <content>
               <elementRef key="measure" minOccurs="1" maxOccurs="unbounded"/>             
            </content>
        </elementSpec>
        
        <elementSpec ident="div" mode="change">
            <attList>
                <attDef ident="type" mode="change">
                    <valList type="semi">
                        <valItem ident="liminal"><desc>authorial preface, foreword, back matter etc.</desc></valItem>
                        <valItem ident="chapter"><desc>chapter not further divided</desc></valItem>
                        <valItem ident="group"><desc>any grouping of chapters or groups, e.g. part, volume, etc.</desc></valItem>
                    </valList>
                </attDef>
            </attList>
        </elementSpec>
        
        <elementSpec ident="change">
            <attList>
                <attDef ident="when" mode="change" usage="req"/>
            </attList>
        </elementSpec>
        
        <elementSpec ident="measure" mode="change">
            <attList>
                <attDef ident="unit" usage="req">
                    <datatype><dataRef key="teidata.enumerated"></dataRef></datatype><valList type="closed">
                        <valItem ident="pages"><desc>pages in the source text</desc></valItem>
                        <valItem ident="words"><desc>approximate number of space delimited tokens in source
                            </desc></valItem>
                        <valItem ident="vols"><desc>number of volumes for original source text
                           </desc></valItem>
                        
                    </valList>
                    
                </attDef>
            </attList>
        </elementSpec>
        
        <elementSpec ident="textClass" mode="change">
            <content>
                <sequence>
                    <elementRef key="catRef" minOccurs="1" maxOccurs="unbounded"/>
                    <elementRef key="keywords" minOccurs="0" maxOccurs="unbounded"/>
                </sequence>
            </content>
        </elementSpec>    </schemaSpec></div>

       </back>
     
   </text>
</TEI>
